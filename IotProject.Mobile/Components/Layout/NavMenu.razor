<MudNavMenu Class="d-flex flex-column" Style="height: 100%;">
    <div class="mt-2">
        <MudHidden Breakpoint="Breakpoint.SmAndUp">
            <MudText Typo="Typo.h6" Class="px-4">My Application</MudText>
            <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Secondary Text</MudText>
            <MudDivider Class="my-2" />
        </MudHidden>
        <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.SpaceDashboard">
            Dashboard
        </MudNavLink>
        <MudNavLink Href="/devices" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Devices">
            Devices
        </MudNavLink>
        <MudDivider Class="mt-2" />
    </div>
    <div class="mt-auto mb-2">
        <MudDivider Class="mb-2" />
        <MudNavLink Href="/account" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AccountCircle">
            Account
        </MudNavLink>
        <MudNavLink Href="/settings" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Settings">
            Settings
        </MudNavLink>
    </div>
</MudNavMenu>